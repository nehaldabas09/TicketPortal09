@model TicketPortal09.Models.SubCategory

@{
    ViewData["Title"] = "Delete";
}

<style>
    .glassmorphic-container {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 20px;
        max-width: 600px;
        margin: auto; /* Center horizontally */
        margin-top: 50px; /* Adjust vertical margin as needed */
    }

    .glassmorphic-heading {
        text-align: center;
        color: #fff; /* Change color as needed */
    }

    .glassmorphic-content {
        margin-top: 20px;
    }

    .delete-details-list {
        margin-bottom: 20px;
    }

    .delete-detail-label {
        font-weight: bold;
        color: #fff; /* Change color as needed */
    }

    .delete-detail-value {
        color: #fff; /* Change color as needed */
    }

    .delete-actions {
        text-align: center;
        margin-top: 20px;
    }

    .glassmorphic-button {
        background-color: #dc3545; /* Change button color */
        color: #fff; /* Change button text color */
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        margin-right: 10px;
        text-decoration: none;
    }

        .glassmorphic-button:hover {
            background-color: #bd2130; /* Change button hover color */
        }
</style>

<div class="glassmorphic-container">
    <h1 class="glassmorphic-heading">Delete SubCategory</h1>

    <div class="glassmorphic-content">
        <h3>Are you sure you want to delete this subcategory?</h3>

        <div class="delete-details-list">
            <span class="delete-detail-label">Name:</span>
            <span class="delete-detail-value">@Html.DisplayFor(model => model.Name)</span>
        </div>

        <div class="delete-details-list">
            <span class="delete-detail-label">Category:</span>
            <span class="delete-detail-value">@Html.DisplayFor(model => model.Category.Name)</span>
        </div>

        <div class="delete-actions">
            <form asp-action="Delete">
                <input type="hidden" asp-for="SubcategoryId" />
                <input type="submit" value="Delete" class="glassmorphic-button" /> 
                <a asp-action="SubcategoryIndex" class="glassmorphic-button">Back to List</a>
            </form>
        </div>
    </div>
</div>

@model TicketPortal09.Models.Ticket

@{
    ViewData["Title"] = "Edit";
}

<style>
    .glassmorphic-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100vh;
        background: linear-gradient(135deg, rgba(255, 255, 255, 0.1) 0%, rgba(209, 218, 230, 0.2) 100%);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 20px;
        box-shadow: 20px 20px 50px rgba(0, 0, 0, 0.5);
    }

    .glassmorphic-heading {
        font-size: 28px;
        font-weight: bold;
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 20px;
    }

    .glassmorphic-content {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 15px;
        padding: 20px;
        width: 100%; /* Stretch the content container */
        max-width: 600px; /* Set a maximum width */
        backdrop-filter: blur(10px);
        box-shadow: inset -7px -7px 10px rgba(255, 255, 255, 0.05), inset 7px 7px 10px rgba(0, 0, 0, 0.2);
    }

    .glassmorphic-form-label {
        font-weight: bold;
        color: rgba(255, 255, 255, 0.7);
    }

    .glassmorphic-form-control {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 5px;
        padding: 10px;
        margin-bottom: 10px;
        color: rgba(255, 255, 255, 0.8);
    }

        .glassmorphic-form-control:focus {
            outline: none;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

    .glassmorphic-button {
        background: rgba(255, 255, 255, 0.2);
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        color: rgba(255, 255, 255, 0.9);
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .glassmorphic-button:hover {
            background: rgba(255, 255, 255, 0.3);
            color:deeppink ;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }
</style>

<div class="glassmorphic-container">
    <h1 class="glassmorphic-heading">Edit Ticket</h1>

    <div class="glassmorphic-content">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="TicketId" />
            <input type="hidden" asp-for="Status" />
            <input type="hidden" asp-for="AgentId" />
            <input type="hidden" asp-for="UserId" />

            <div class="form-group">
                <label asp-for="Title" class="glassmorphic-form-label">Title:</label>
                <input asp-for="Title" class="form-control glassmorphic-form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Description" class="glassmorphic-form-label">Description:</label>
                <textarea asp-for="Description" class="form-control glassmorphic-form-control" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="CategoryId" class="glassmorphic-form-label">Category:</label>
                <select asp-for="CategoryId" class="form-control glassmorphic-form-control" asp-items="ViewBag.Categories as SelectList">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SubCategoryId" class="glassmorphic-form-label">Subcategory:</label>
                <select asp-for="SubCategoryId" class="form-control glassmorphic-form-control" asp-items="ViewBag.Subcategories as SelectList">
                    <option value="">Select Subcategory</option>
                </select>
                <span asp-validation-for="SubCategoryId" class="text-danger"></span>
            </div>

            <div class="form-group">
                
            </div>
        </form>
        
        <div>
            <form asp-action="Delete">
                <input type="hidden" asp-for="TicketId" />
                <button type="submit" class="btn btn-danger glassmorphic-button">Save</button>
                <a asp-action="TicketIndex" class="btn btn-secondary glassmorphic-button">Back to List</a>
            </form>
        </div>
    </div>
</div>




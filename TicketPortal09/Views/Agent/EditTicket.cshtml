@model TicketPortal09.Models.Ticket

@{
    var remarks = ViewBag.Remarks as List<Remark>;
}

<style>
    /* Glassmorphic styles */
    
    .glassmorphic-container {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(20px);
        border-radius: 20px;
        padding: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        margin-bottom: 20px;
    }

    .glassmorphic-heading {
        text-align: center;
        color: #fff;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.25);
    }

    .glassmorphic-form {
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(4px);
        -webkit-backdrop-filter: blur(4px);
        border-radius: 10px;
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 20px;
        margin-top: 20px;
    }

        .glassmorphic-form label {
            color: white;
        }

        .glassmorphic-form select {
            background-color: rgba(255, 255, 255, 0.05);
            color: #000; 
            border: 1px solid rgba(255, 255, 255, 0.18); 
          
        } 

        .glassmorphic-form option {
            background-color: rgba(255, 255, 255, 0.05);
        }

        .glassmorphic-form button {
            margin-top: 10px;
        }

    
    .edit-status-link {
        color: #fff; 
    }
</style>

<div class="glassmorphic-container">
    <h1 class="glassmorphic-heading">Edit Ticket Status</h1>

    <div class="glassmorphic-form">
        <form asp-action="EditTicket" method="post">
            <input type="hidden" asp-for="TicketId" />
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="AgentId" />

            <div class="form-group">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="Open">Open</option>
                    <option value="Closed">Closed</option>
                    <option value="In Progress">In Progress</option>
                </select>
            </div>
            <div class="form-group">
                <label class="control-label form-label">Remark</label>
                <input  class="form-control"  name="remark"/>
                <span  class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</div>

<div>
    <a asp-action="AgentIndex" class="edit-status-link">Back to List</a>
</div>

<br />
@foreach (var remark in remarks)
{
    <ul class="timeline">
        <li>
            <a target="_blank">@remark.Status</a><br />
            <a href="#" class="float-right">@remark.DateTime</a>
            <p>@remark.Title</p>
        </li>
    </ul>
   
    
}



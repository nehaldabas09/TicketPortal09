@model TicketPortal09.Models.Category

@{
    ViewData["Title"] = "Details";
}

<style>
    .glassmorphic-container {
        background: rgba(255, 255, 255, 0.15);
        border-radius: 15px;
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.18);
        padding: 20px;
        max-width: 600px;
        margin: auto; /* Center horizontally */
        margin-top: 50px; /* Adjust vertical margin as needed */
    }

    .glassmorphic-heading {
        text-align: center;
        color: #fff; /* Change color as needed */
    }

    .glassmorphic-content {
        margin-top: 20px;
    }

    .category-details-list {
        margin-bottom: 20px;
    }

    .category-detail-label {
        font-weight: bold;
        color: #fff; /* Change color as needed */
    }

    .category-detail-value {
        color: #fff; /* Change color as needed */
    }

    .category-actions {
        text-align: center;
    }

    .glassmorphic-button {
        background-color: #3f51b5; /* Change button color */
        color: #fff; /* Change button text color */
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        margin-right: 10px;
        text-decoration: none;
    }

        .glassmorphic-button:hover {
            background-color: #6573c3; /* Change button hover color */
        }
</style>

<div class="glassmorphic-container">
    <h1 class="glassmorphic-heading">Category Details</h1>

    <div class="glassmorphic-content">
        <div class="category-details-list">
            <span class="category-detail-label">Name:</span>
            <span class="category-detail-value">@Html.DisplayFor(model => model.Name)</span>
        </div>

        <div class="category-actions">
            <a asp-action="Edit" asp-route-id="@Model?.CategoryId" class="glassmorphic-button">Edit</a>
            <a asp-action="Index" class="glassmorphic-button">Back to List</a>
        </div>
    </div>
</div>
